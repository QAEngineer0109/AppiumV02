<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="LOG_DIR">logs</Property>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss} %-5level %c{1}:%L - %msg%n
        </Property>
    </Properties>

    <Appenders>

        <!-- Console output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling file output -->
        <RollingFile name="File"
                     fileName="${LOG_DIR}/automation.log"
                     filePattern="${LOG_DIR}/automation-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="2MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Reduce noise from libraries -->
        <Logger name="org.openqa.selenium" level="INFO"/>
        <Logger name="io.appium" level="INFO"/>
        <Logger name="org.apache.http" level="WARN"/>

        <!-- Your framework packages -->
        <Logger name="base" level="DEBUG"/>
        <Logger name="pages" level="DEBUG"/>
        <Logger name="appiumTests" level="DEBUG"/>
        <Logger name="listeners" level="DEBUG"/>
        <Logger name="utils" level="DEBUG"/>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

    </Loggers>

</Configuration>
